<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Registration Form</title>
        <style>
            body { display: flex; justify-content: center; align-items: center;
            height: 100vh; margin: 0; background-color: #121212; color: #fff;
            font-family: Arial, sans-serif; } .registration-form {
            background-color: #1e1e1e; padding: 20px; border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); } form { display: flex;
            flex-direction: column; } label { margin-bottom: 8px; } input {
            margin-bottom: 16px; padding: 10px; border: 1px solid #333;
            border-radius: 4px; background-color: #2e2e2e; color: #fff; } button
            { padding: 10px; border: none; border-radius: 4px; background-color:
            #007bff; color: #fff; cursor: pointer; } button:hover {
            background-color: #0056b3; } .registration-form form { display:
            flex; flex-direction: column; } .registration-form label {
            margin-bottom: 5px; font-size: 1rem; font-weight: bold; }
            .registration-form input { margin-bottom: 20px; padding: 12px;
            border: 1px solid #555; border-radius: 5px; background-color:
            #2c2c2c; color: #ffffff; font-size: 1rem; } .registration-form
            button { padding: 12px; border: none; border-radius: 5px;
            background-color: #4caf50; color: #ffffff; cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-size: 1rem; font-weight: bold; } .registration-form
            button:hover { background-color: #45a049; transform: scale(1.05); }
            .email-error { color: #ff4d4d; margin-top: -10px; margin-bottom:
            20px; font-size: 0.9rem; font-weight: bold; }
        </style>
    </head>
    <body>
        <div class='registration-form'>
            <form>
                <label for='email'>Email:</label>
                <input type='email' id='email' name='email' required />
                <div class='email-error'></div>

                <label for='password'>Password:</label>
                <input type='password' id='password' name='password' required />
                <div class='password-error'></div>

                <button type='submit'>Register</button>
            </form>
        </div>
        <script src='/js/main.js'></script>
    </body>
</html>